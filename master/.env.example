# -------------------------
# Server Configuration
# -------------------------
PORT=9000                   # HTTP server port for Master Node
WS_PATH=/ws                 # WebSocket path for worker connections

# -------------------------
# Heartbeat Settings
# -------------------------
HEARTBEAT_WINDOW_MS=45000   # Max allowed gap before marking worker offline (in ms)
HEARTBEAT_INTERVAL_MS=5000  # Expected heartbeat frequency from workers (in ms)

# -------------------------
# Replication Settings
# -------------------------
DEFAULT_RF=2                # Default replication factor (must be >=2 for redundancy)
